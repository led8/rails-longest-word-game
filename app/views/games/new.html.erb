<div class="center">
  <% @letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>

  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="text" name="word" class="form-control" id="input" placeholder="What is the longest word you can find ?">
    <span class="input-group-btn">
      <input type="submit" value="Send" class="btn btn-outline-warning">
    </span>
  </form>
</div>



